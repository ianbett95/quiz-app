<%-include('partials/header')%>
  <%-include('partials/nav')%>
    <main id="edit-profile" class="container">
      <form action="/edit-profile/<%= profile.s_id %>" method="post" enctype="multipart/form-data">
        <h1>Edit profile</h1>

        <div class="form-input">
          <label for="">Name</label>
          <input type="text" name="name" id="" value="<%=profile.name%>" />
        </div>

        <div class="form-input">
          <label for="">email</label>
          <input type="email" name="email" id="" value="<%=profile.email%>" />
        </div>

        <div class="form-input">
          <label for="">phone number</label>
          <input type="text" name="contacts" value="<%=profile.contacts%>">
        </div>


        <div class="form-input">
          <label for="">Gender</label>
          <select name="gender" id="">

            <% if(profile.gender){%>
              <option value="<%=profile.gender%>" selected><%=profile.gender%></option>
            <%}%>

                <option value="">select gender</option>
                <option value="male">male</option>
                <option value="female">female</option>
          </select>
        </div>

        <div class="form-input">
          <label for="">Date of birth</label>
          <input type="date" name="dob" id=""  value="<%=profile.dob%>"/>
        </div>

        <div class="form-input">
          <label for="">profile pictures</label>
          <input type="file" name="picture" id=""/>
        </div>

        <input type="submit" value="update profile" />
      </form>
    </main>

    <%-include('partials/footer')%>